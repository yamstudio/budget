{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
      "sites_belfastweb_name": {
          "type": "String"
      },
      "serverfarms_belfast_name": {
          "type": "String"
      }
  },
  "variables": {},
  "resources": [
      {
          "type": "Microsoft.Web/serverfarms",
          "apiVersion": "2023-12-01",
          "name": "[parameters('serverfarms_belfast_name')]",
          "location": "East US 2",
          "sku": {
              "name": "F1",
              "tier": "Free",
              "size": "F1",
              "family": "F",
              "capacity": 0
          },
          "kind": "app",
          "properties": {
              "perSiteScaling": false,
              "elasticScaleEnabled": false,
              "maximumElasticWorkerCount": 1,
              "isSpot": false,
              "reserved": false,
              "isXenon": false,
              "hyperV": false,
              "targetWorkerCount": 0,
              "targetWorkerSizeId": 0,
              "zoneRedundant": false
          }
      },
      {
          "type": "Microsoft.Web/sites",
          "apiVersion": "2023-12-01",
          "name": "[parameters('sites_belfastweb_name')]",
          "location": "East US 2",
          "dependsOn": [
              "[resourceId('Microsoft.Web/serverfarms', parameters('serverfarms_belfast_name'))]"
          ],
          "kind": "app",
          "identity": {
              "type": "SystemAssigned"
          },
          "properties": {
              "enabled": true,
              "hostNameSslStates": [
                  {
                      "name": "[concat(parameters('sites_belfastweb_name'), '.azurewebsites.net')]",
                      "sslState": "Disabled",
                      "hostType": "Standard"
                  },
                  {
                      "name": "[concat(parameters('sites_belfastweb_name'), '.scm.azurewebsites.net')]",
                      "sslState": "Disabled",
                      "hostType": "Repository"
                  }
              ],
              "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('serverfarms_belfast_name'))]",
              "reserved": false,
              "isXenon": false,
              "hyperV": false,
              "dnsConfiguration": {},
              "vnetRouteAllEnabled": false,
              "vnetImagePullEnabled": false,
              "vnetContentShareEnabled": false,
              "siteConfig": {
                  "numberOfWorkers": 1,
                  "acrUseManagedIdentityCreds": false,
                  "alwaysOn": false,
                  "http20Enabled": true,
                  "functionAppScaleLimit": 0,
                  "minimumElasticInstanceCount": 1
              },
              "scmSiteAlsoStopped": false,
              "clientAffinityEnabled": true,
              "clientCertEnabled": false,
              "clientCertMode": "Required",
              "hostNamesDisabled": false,
              "vnetBackupRestoreEnabled": false,
              "customDomainVerificationId": "BBF8DDAD6460810C80F06E800FE0C4E056471DF27451870FC5B84AFDD9B3F4E1",
              "containerSize": 0,
              "dailyMemoryTimeQuota": 0,
              "httpsOnly": false,
              "redundancyMode": "None",
              "storageAccountRequired": false,
              "keyVaultReferenceIdentity": "SystemAssigned"
          }
      },
      {
          "type": "Microsoft.Web/sites/basicPublishingCredentialsPolicies",
          "apiVersion": "2023-12-01",
          "name": "[concat(parameters('sites_belfastweb_name'), '/ftp')]",
          "location": "East US 2",
          "dependsOn": [
              "[resourceId('Microsoft.Web/sites', parameters('sites_belfastweb_name'))]"
          ],
          "properties": {
              "allow": false
          }
      },
      {
          "type": "Microsoft.Web/sites/basicPublishingCredentialsPolicies",
          "apiVersion": "2023-12-01",
          "name": "[concat(parameters('sites_belfastweb_name'), '/scm')]",
          "location": "East US 2",
          "dependsOn": [
              "[resourceId('Microsoft.Web/sites', parameters('sites_belfastweb_name'))]"
          ],
          "properties": {
              "allow": true
          }
      },
      {
          "type": "Microsoft.Web/sites/config",
          "apiVersion": "2023-12-01",
          "name": "[concat(parameters('sites_belfastweb_name'), '/web')]",
          "location": "East US 2",
          "dependsOn": [
              "[resourceId('Microsoft.Web/sites', parameters('sites_belfastweb_name'))]"
          ],
          "properties": {
              "numberOfWorkers": 1,
              "defaultDocuments": [],
              "netFrameworkVersion": "v9.0",
              "phpVersion": "5.6",
              "requestTracingEnabled": false,
              "remoteDebuggingEnabled": false,
              "remoteDebuggingVersion": "VS2022",
              "httpLoggingEnabled": false,
              "acrUseManagedIdentityCreds": false,
              "logsDirectorySizeLimit": 35,
              "detailedErrorLoggingEnabled": false,
              "publishingUsername": "$belfastweb",
              "scmType": "None",
              "use32BitWorkerProcess": true,
              "webSocketsEnabled": false,
              "alwaysOn": false,
              "managedPipelineMode": "Integrated",
              "virtualApplications": [
                  {
                      "virtualPath": "/",
                      "physicalPath": "site\\wwwroot",
                      "preloadEnabled": false
                  }
              ],
              "loadBalancing": "LeastRequests",
              "experiments": {
                  "rampUpRules": []
              },
              "autoHealEnabled": false,
              "vnetRouteAllEnabled": false,
              "vnetPrivatePortsCount": 0,
              "localMySqlEnabled": false,
              "managedServiceIdentityId": 78803,
              "ipSecurityRestrictions": [
                  {
                      "ipAddress": "Any",
                      "action": "Allow",
                      "priority": 2147483647,
                      "name": "Allow all",
                      "description": "Allow all access"
                  }
              ],
              "scmIpSecurityRestrictions": [
                  {
                      "ipAddress": "Any",
                      "action": "Allow",
                      "priority": 2147483647,
                      "name": "Allow all",
                      "description": "Allow all access"
                  }
              ],
              "scmIpSecurityRestrictionsUseMain": false,
              "http20Enabled": true,
              "minTlsVersion": "1.3",
              "scmMinTlsVersion": "1.2",
              "ftpsState": "FtpsOnly",
              "preWarmedInstanceCount": 0,
              "elasticWebAppScaleLimit": 0,
              "functionsRuntimeScaleMonitoringEnabled": false,
              "minimumElasticInstanceCount": 1,
              "azureStorageAccounts": {}
          }
      },
      {
          "type": "Microsoft.Web/sites/hostNameBindings",
          "apiVersion": "2023-12-01",
          "name": "[concat(parameters('sites_belfastweb_name'), '/', parameters('sites_belfastweb_name'), '.azurewebsites.net')]",
          "location": "East US 2",
          "dependsOn": [
              "[resourceId('Microsoft.Web/sites', parameters('sites_belfastweb_name'))]"
          ],
          "properties": {
              "siteName": "belfastweb",
              "hostNameType": "Verified"
          }
      }
  ]
}